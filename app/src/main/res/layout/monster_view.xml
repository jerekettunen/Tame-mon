<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="15dp"
    android:background="#009688"
    android:orientation="horizontal">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linUserInformation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/rvtxtLvl"
            app:layout_constraintStart_toEndOf="@+id/imgMonster">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtHitPoints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ohjelma"
                android:textColor="#303030"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtAtck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ohjelma"
                android:textColor="#303030"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtDef"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ohjelma"
                android:textColor="#303030"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtSpd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ohjelma"
                android:textColor="#303030"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtAcc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ohjelma"
                android:textColor="#303030"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imgMonster"
            android:layout_width="128dp"
            android:layout_height="128dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/rvtxtLvl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:text="11"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.LinearLayoutCompat>